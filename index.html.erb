<h1>All users</h1>
<%= form_for users_path, :method => :get do |f| %>
  <div><%= f.search_field :search %></div>
  <%= f.submit "Search", class: "btn btn-large btn-primary" %>
<% end %>

<%= form_tag users_path, :method => :get do %>
  <p>
  You can find new friend here: 
    <%= search_field_tag :search, params[:search] %>
    <%= submit_tag "Search", class="btn btn-small btn-primary" :name => nil %>
  </p>
<% end %>

<%= will_paginate%>
  <ul class="users">
    <%= render @users %>
  </ul>
<%= will_paginate%>

